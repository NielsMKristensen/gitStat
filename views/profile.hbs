   <body>
    
    
    <div class="container">
    <header class="d-flex flex-wrap align-items-center py-4 mb-4 border-bottom header-color">
          
        <div class="col-md-3 text-end">
            <a class="btn btn-outline-primary me-2" href="/home" class="nav-link px-2 link-dark">Home</a>
        </div>

        <div class="col-md-2 text-end">
            <form id="logout-form" action="/unregister" method="POST">
                <button onclick="return confirm('WARNING you will need to register again and set up all you repositories WARNING');" class="btn btn-outline-primary me-2">Unregister</button>
            </form>
         </div>
         <div class="col-md-3 text-end">
          <h1>PROFILE</h1>
        </div> 
      
      <div class="col-md-3 text-end">
            <form id="logout-form" action="/logout" method="POST">
                <button class="btn btn-outline-primary me-2">Logout</button>
            </form>
      </div>

    </header> 
    </div>
    
    <p>change password</p>
    
    <h3>Change GIT username</h3>
    <form action="/changegitusername" method="POST">

        {{#each data}}
            {{#if @first}}
                <label> New GIT Username
                    <input type="text" name="newgitusername" placeholder="{{this.owner.login}}"/>
                </label>
            {{/if}}
        {{/each}}
    <button type="submit">Change</button>
    </form>
    
    <h3>manage repositories</h3>

    <div>
        <form action="/profile" method="POST" id="repoListForm">
            {{#each data}}
                <div class="repoList">
                    <label id="repoName">{{this.name}}</label>
                    <label for="commitStat_{{this.name}}">Commit statistics
                        
                        <input type="checkbox" name="commitStat_{{this.name}}" id="commitStat_{{this.name}}" class="repoCheckbox" 
                        {{#if this.commitStat_}}
                            {{this.commitStat_}}
                        {{/if}} />
                    </label>
                
                    <label for="contributors_{{this.name}}">Contributors
                        <input type="checkbox" name="contributors_{{this.name}}" id="contributors_{{this.name}}" class="repoCheckbox" 
                        {{#if this.contributors_}}
                            {{this.contributors_}}
                        {{/if}} />
                    </label>
                
                    <label for="health_{{this.name}}">Health
                        <input type="checkbox" name="health_{{this.name}}" id="health_{{this.name}}" class="repoCheckbox" 
                        {{#if this.health_}}
                            {{this.health_}}
                        {{/if}} />
                    </label>
                    <span></span>
                </div>
            {{/each}}
                <button type="submit" value="submit" class="btn btn-outline-primary me-2">Submit</button>
        </form>
    </div>

    <script src="/js/script.js"></script>
    <script src="/js/fillRepoConfig.js"></script>
   </body>


